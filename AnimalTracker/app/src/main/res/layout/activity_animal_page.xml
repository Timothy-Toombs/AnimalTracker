<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalPage">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/animalPage_pic"
        android:layout_below="@+id/toolbar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/animalPage_petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/animalPage_pic"
        android:layout_below="@+id/toolbar"
        android:textSize="20sp"
        android:text="Pet Name"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/animalPage_commonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/animalPage_pic"
        android:textSize="15sp"
        android:text="Common Name"
        android:layout_marginStart="10dp"
        android:layout_below="@id/animalPage_petName"
        android:textColor="@android:color/black"
        />

</RelativeLayout>